<form>
  <label>HealthKit Data from Today</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="index">
      <label>Index</label>
      <fieldForLabel>index</fieldForLabel>
      <fieldForValue>index</fieldForValue>
      <search>
        <query>| eventcount summarize=false index=* | dedup index | fields index | search index!=iot</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <choice value="iot">iot</choice>
    </input>
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>@d</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="name" searchWhenChanged="true">
      <label>Name</label>
      <fieldForLabel>name</fieldForLabel>
      <fieldForValue>name</fieldForValue>
      <search>
        <query>index=$index$ sourcetype=apple* 
| dedup uuid sourcetype 
| stats count by name</query>
        <earliest>@d</earliest>
        <latest>now</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Total Steps</title>
      <single>
        <search>
          <query>index="$index$" sourcetype="apple:steps" name="$name$"
| dedup uuid
| stats sum(steps)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </single>
    </panel>
    <panel>
      <title>Most Recent Heart Rate</title>
      <single>
        <search>
          <query>index=$index$ sourcetype="apple:heartrate" name="$name$"
| dedup uuid
| head 1
| table bpm</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Total Hours of Sleep</title>
      <single>
        <search>
          <query>index=$index$ sourcetype=apple:sleep startDate=* AND endDate=* name="$name$"
| dedup startDate endDate sourcetype 
| eval start_time=strptime(startDate,"%Y-%m-%dT%H:%M:%SZ") 
| eval end_time=strptime(endDate,"%Y-%m-%dT%H:%M:%SZ") 
| eval now=now() 
| eval start_time=start_time-18000
| eval end_time=end_time-18000
| eval duration=end_time-start_time 
| eval _time=strftime(start_time,"%F %T") 
| eval start_diff=now-start_time 
| where start_diff&lt;86400
| stats count by _time name duration 
| table _time name duration
| eval duration = (duration * 1000)
| stats sum(duration) as total_seconds
| eval "Total Hours of Sleep" = round(total_seconds/1000/60/60,1)
| fields - total_seconds</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Total Minutes of Exercise</title>
      <single>
        <search>
          <query>index=$index$ sourcetype="apple:exercise"  name="$name$"
| dedup uuid
| stats sum(exerciseminutes)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Total Mindful Seconds</title>
      <single>
        <search>
          <query>index=$index$ sourcetype="apple:mindful" uuid=* name="$name$"
| dedup uuid 
| stats sum(mindfulseconds) as mindfulseconds 
| eval mindfulseconds=mindfulseconds/60</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Battery Percent</title>
      <chart>
        <search>
          <query>index="$index$" sourcetype="apple:systeminfo" name="$name$"
| dedup sourcetype
| table batterypercent</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">markerGauge</option>
        <option name="charting.chart.rangeValues">[0,30,70,100]</option>
        <option name="charting.gaugeColors">["0xdc4e41","0xf8be34","0x53a051"]</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Sleep over the last 24 Hours</title>
      <viz type="timeline_app.timeline">
        <search>
          <query>index=$index$ sourcetype=apple:sleep startDate=* AND endDate=*  name="$name$"
| dedup startDate endDate sourcetype 
| rex mode=sed field=endDate "s/Z/ -00:00/"
| rex mode=sed field=startDate "s/Z/ -00:00/"
| eval start_time=strptime(startDate,"%Y-%m-%dT%H:%M:%S %Z") 
| eval end_time=strptime(endDate,"%Y-%m-%dT%H:%M:%S %Z") 
| eval now=now() 
| eval duration=end_time-start_time 
| eval _time=strftime(start_time,"%F %T") 
| eval start_diff=now-start_time 
| where start_diff&lt;86400
| stats count by _time name duration 
| table _time name duration
| eval duration = (duration * 1000)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="timeline_app.timeline.axisTimeFormat">SECONDS</option>
        <option name="timeline_app.timeline.colorMode">categorical</option>
        <option name="timeline_app.timeline.maxColor">#DA5C5C</option>
        <option name="timeline_app.timeline.minColor">#FFE8E8</option>
        <option name="timeline_app.timeline.numOfBins">9</option>
        <option name="timeline_app.timeline.tooltipTimeFormat">SECONDS</option>
        <option name="timeline_app.timeline.useColors">0</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </viz>
    </panel>
  </row>
  <row>
    <panel>
      <title>Heart Rate Over Time Today</title>
      <chart>
        <search>
          <query>index=$index$ sourcetype=apple:heartrate  name="$name$"
| dedup uuid
| bucket span=1m _time
| stats  max(bpm) as bpm by _time
| eventstats avg(bpm) as average_bpm</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Steps Over Time</title>
      <chart>
        <search>
          <query>index=$index$ sourcetype="apple:steps" name="$name$"
| dedup  uuid
| sort 0 + _time
| streamstats sum(steps) as steps
| timechart span=1m max(steps) as steps</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <title>Steps Walked Throughout the Day</title>
      <chart>
        <search>
          <query>index=$index$ sourcetype="apple:steps" name="$name$"
| dedup  uuid
| table _time steps
| timechart span=30m sum(steps) as steps</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Total Hours Standing</title>
      <chart>
        <search>
          <query>index=$index$ sourcetype="apple:stand" name="$name$"
| dedup  uuid
| sort 0 + _time
| eval count=1
| streamstats sum(count) as count
| timechart span=1m max(count) as count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <title>Hours Stood Throughout the Day</title>
      <chart>
        <search>
          <query>index=$index$ sourcetype=apple:stand name="$name$"
| dedup uuid
| timechart span=1h count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</form>
